<header class="bg-white shadow">
<div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900">Conversations</h1>
</div>
</header>
<main>
<div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">

<div class="w-full max-w-4xl mx-auto">
  <div class="relative w-full overflow-auto">
    <table class="w-full caption-bottom text-sm">
      <thead class="[&amp;_tr]:border-b">
        <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Caller
          </th>
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Loan Amount
          </th>
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Stated Income
          </th>
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Status
          </th>
        </tr>
      </thead>
      <tbody class="[&amp;_tr:last-child]:border-0">
        <% @conversations.each do |conversation| %>
          <%= link_to conversation_path(conversation), class: "block" do %>
            <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
              <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0">
                <div class="flex flex-col">
                  <span class="font-medium"><%= conversation.name %></span>
                  <span class="text-sm text-gray-500 dark:text-gray-400"><%= conversation.phone %></span>
                </div>
              </td>
              <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0"><%= number_to_currency(conversation.loan_amount) %></td>
              <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0"><%= number_to_currency(conversation.income) %></td>
              <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0">
                <div class="inline-flex w-fit items-center whitespace-nowrap rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                  <%= conversation.status %>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

</div>
</main>
