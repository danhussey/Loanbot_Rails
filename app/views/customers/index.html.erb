<header class="bg-white shadow">
<div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900">Customers</h1>
</div>
</header>
<main>
<div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">

<div class="w-full max-w-4xl mx-auto">
  <div class="relative w-full overflow-auto">
    <table class="w-full caption-bottom text-sm">
      <thead class="[&amp;_tr]:border-b">
        <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            First Name
          </th>
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Last Name
          </th>
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Email
          </th>
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Phone
          </th>
          <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&amp;:has([role=checkbox])]:pr-0">
            Address
          </th>
        </tr>
      </thead>
      <tbody class="[&amp;_tr:last-child]:border-0">
        <% @customers.each do |customer| %>
          <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0">
              <div class="flex flex-col">
                <span class="font-medium"><%= customer.first_name %></span>
              </div>
            </td>
            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0"><%= customer.last_name %></td>
            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0"><%= customer.email %></td>
            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0"><%= customer.phone %></td>
            <td class="p-4 align-middle [&amp;:has([role=checkbox])]:pr-0"><%= customer.address %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

</div>
</main>
