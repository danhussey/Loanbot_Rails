<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Borrowing Capacity Voice Agent Workflow Customization</h1>

  <!-- Workflow Overview -->
  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-4">Workflow Overview</h2>
    <!-- Placeholder for workflow diagram -->
    <div class="bg-gray-200 p-4 rounded-lg mb-4">
      <p class="text-gray-600">Workflow diagram placeholder</p>
    </div>
    <!-- Stage summary -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% ['Greeting', 'Data Collection', 'Calculation', 'Result Announcement'].each do |stage| %>
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="font-semibold mb-2"><%= stage %></h3>
          <p class="text-sm text-gray-600">Brief description of <%= stage.downcase %> stage.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Greeting and Introduction -->
  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-4">Greeting and Introduction</h2>
    <div class="mb-4">
      <label for="greeting-script" class="block text-sm font-medium text-gray-700 mb-2">Greeting Script</label>
      <textarea id="greeting-script" rows="4" class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500" placeholder="Enter greeting script..."></textarea>
    </div>
    <div>
      <label for="voice-selection" class="block text-sm font-medium text-gray-700 mb-2">Voice Selection</label>
      <select id="voice-selection" class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500">
        <option>Select voice</option>
        <option>Female 1</option>
        <option>Male 1</option>
        <option>Neutral 1</option>
      </select>
    </div>
  </section>

  <!-- Data Collection Stages -->
  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-4">Data Collection Stages</h2>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-xl font-semibold mb-4">Input Fields</h3>
      <div id="input-fields" class="space-y-4">
        <!-- Placeholder for dynamic input fields -->
        <div class="flex items-center space-x-4">
          <input type="text" class="flex-grow px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500" placeholder="Field name">
          <select class="px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500">
            <option>Text</option>
            <option>Number</option>
            <option>Date</option>
          </select>
          <button class="px-4 py-2 text-white bg-red-500 rounded-lg hover:bg-red-600 focus:outline-none">Remove</button>
        </div>
      </div>
      <button class="mt-4 px-4 py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none">Add Field</button>
    </div>
  </section>

  <!-- Conditional Logic -->
  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-4">Conditional Logic</h2>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-xl font-semibold mb-4">IF-THEN Rules</h3>
      <div id="conditional-rules" class="space-y-4">
        <!-- Placeholder for conditional rules -->
        <div class="p-4 border rounded-lg">
          <p class="font-medium">If <span class="text-blue-600">income</span> is greater than <span class="text-green-600">$100,000</span></p>
          <p class="mt-2">Then: Ask about investment properties</p>
        </div>
      </div>
      <button class="mt-4 px-4 py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none">Add Rule</button>
    </div>
  </section>

  <!-- Calculation Method -->
  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-4">Calculation Method</h2>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-xl font-semibold mb-4">Calculation Formula</h3>
      <textarea rows="4" class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500" placeholder="Enter calculation formula..."></textarea>
    </div>
  </section>

  <!-- Result Announcement -->
  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-4">Result Announcement</h2>
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-xl font-semibold mb-4">Result Message</h3>
      <textarea rows="4" class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500" placeholder="Enter result announcement message..."></textarea>
    </div>
  </section>

  <!-- Save and Deploy -->
  <section class="mt-8 flex justify-end space-x-4">
    <button class="px-6 py-3 text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 focus:outline-none">Save Draft</button>
    <button class="px-6 py-3 text-white bg-green-500 rounded-lg hover:bg-green-600 focus:outline-none">Deploy Workflow</button>
  </section>
</div>